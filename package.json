{
  "name": "class-companion",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "node scripts/check-env.mjs",
    "build": "prisma generate && next build",
    "deploy": "prisma migrate deploy && next build",
    "postinstall": "prisma generate",
    "start": "next start",
    "test:gamification": "tsx scripts/tests/gamification-helpers.test.ts",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "db:seed": "npx tsx prisma/seed-simple.ts && node prisma/seed.js && node scripts/update-all-vocab.js && node scripts/create-vocab-games.js && npm run import:verb-quizzes",
    "db:migrate": "prisma migrate deploy",
    "import:simple-tenses": "node scripts/import-simple-tenses.mjs",
    "import:verb-quizzes": "npx tsx scripts/import/import-verb-quizzes.ts",
    "delete:verb-quizzes": "npx tsx scripts/import/delete-verb-quizzes.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@vercel/analytics": "^1.6.1",
    "bcryptjs": "^3.0.3",
    "framer-motion": "^12.23.25",
    "isomorphic-dompurify": "^2.34.0",
    "jsdom": "^27.0.1",
    "lucide-react": "^0.556.0",
    "next": "16.0.7",
    "next-auth": "^4.24.13",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "recharts": "^2.15.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "prisma": "^6.19.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
